---
<ConcentrationLayout>
  <div class="d-flex flex-column" style="height: 100vh">
    <div class="d-flex justify-content-between align-items-center">
      <h3>{paint.sectionTitle} - {paint.title}</h3>
      <div class="d-flex align-items-center">
        <a href="/gallery">
          <span class="mx-2">Ver galer√≠a</span>
          <Image src={panelImageControlImg} alt="go to gallery"/>
        </a>
      </div>
    </div>

    <div class="d-flex align-items-center flex-grow-1">
      <div class="image-control">
        { previousPaint &&
          <a href={`/paint/${previousPaint.id}`}>
            <Image src={previousImageControlImg} alt="previews image"/>
          </a>
        }
      </div>

      <div class="flex-grow-1 d-flex justify-content-center">
        <img class="paint" src={`${import.meta.env.AWS_S3_BUCKET}/images/${paint.path}`} alt={paint.title}>
      </div>
      
      <div class="image-control">
        <a href={`/paint/${nextPaint.id}`}>
          <Image src={nextImageControlImg} alt="next image"/>
        </a>
      </div>
    </div>
  </div>
</ConcentrationLayout>

<style>
  .paint {
    width: auto;
    max-height: 80vh;
    max-width: 80vw;
  }

  .image-control {
    width: 40px;
    text-align: center;
  }

  a {
    color: white;
    text-decoration: none;
  }
</style>
