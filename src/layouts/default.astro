---
import '../assets/bootstrap.min.css'
import '../assets/main.css'
import '../assets/gerlop.css'

import { Image } from 'astro:assets';

import signImage from '../assets/img/firma.png';
---
<html lang="en" itemscope itemtype="http://schema.org/WebPage">
	<head>
		<title>Gerlop</title>
		<meta charset='utf-8'>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/><!--para moviles-->

		<!--Analytics-->
		<script>
		  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		  ga('create', 'UA-54555800-1', 'auto');
		  ga('send', 'pageview');

		</script>
	</head>
	<body>
		<div id="fb-root"></div>
		<script>(function(d, s, id) {
		  var js, fjs = d.getElementsByTagName(s)[0];
		  if (d.getElementById(id)) return;
		  js = d.createElement(s); js.id = id;
		  js.src = "//connect.facebook.net/es_LA/sdk.js#xfbml=1&version=v2.0";
		  fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));</script>
		<section class="navbar navbar-default navbar-fixed-top" role="navigation">
			<div class="container">
				<div class="navbar-header">
					<div class="brand pull-left">
						<Image src={signImage} alt="logo firma">
					</div>
					<button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".tr-navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
					</button>

				</div>

				<div class="navbar-header pull-right">
				</div>
				

				<nav class="collapse navbar-collapse tr-navbar-collapse">
					<ul class="nav navbar-nav">
						<li>
							<a href="/">
								<strong>Inicio</strong>
							</a>
						</li>
						<li>
							<a href="/gallery">
								<strong>Galeria</strong> 
							</a>
						</li>
						<li>
							<a href="/contact">
								Contacto
							</a>
						</li>
					</ul>
					<div class="navbar-form navbar-right">
						<div class="form-group">
							<div class="fb-like" data-href="http://www.gerlop.net/" data-layout="button_count" data-action="like" data-show-faces="true" data-share="false"></div>
						</div>
						<div class="form-group" style="padding-top:4px">
							<div class="g-plusone" data-size="medium" data-href="http://www.gerlop.net"></div>
						</div>
					</div>
				</nav>
			</div>
		</section>
		<!-- content -->
		<section class="col-md-offset-1 col-md-10 main_content">
			<section class="container-fluid">
				<slot></slot>
			</section>
		</section>

		<!-- footer -->
		<section class="col-md-offset-1 col-md-10" style="margin-top:20px">
			<p class="small text-muted text-center">
				Copyright &copy; 2014. 
				Powered by: <a href="http://koajs.com/" target="_new">Astro</a>
				Design by: <a href="https://github.com/lopezchr">Lopezchr</a>
			</p>
		</section>
	</body>
</html>
