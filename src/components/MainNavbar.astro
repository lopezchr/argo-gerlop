---
import { Image } from 'astro:assets';
import signImage from '../assets/img/firma.png';
---
<section class="navbar" role="navigation">
  <div class="container">

    <div class="d-flex justify-content-between ">
      <div class="flex-grow-1 d-flex align-items-center">
        <div class="ml-3">
          <Image src={signImage} alt="logo firma">
        </div>
        <button class="d-sm-none">
          options
        </button>
        <div class="d-none d-sm-block">
          <a href="/"><strong>Inicio</strong></a>
          <a href="/gallery"><strong>Galeria</strong></a>
          <a href="/contact">Contacto</a>
        </div>
      </div>
      <div class="d-flex align-items-center">
        <div class="navbar-form navbar-right">
          <div class="form-group">
            <div class="fb-like" data-href="http://www.gerlop.net/" data-layout="button_count" data-action="like" data-show-faces="true" data-share="false"></div>
          </div>
          <div class="form-group" style="padding-top:4px">
            <div class="g-plusone" data-size="medium" data-href="http://www.gerlop.net"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.navbar {
  position: relative;
  background-color: white;
	border-color: rgba(255,255,255,0.3);
 	box-shadow:0px 0px 10px #727272;
 	padding: 12px 0;
}

a {
  margin-left: 10px;
  text-decoration: none;
  font-size: 20px;
  color: rgb(80, 80, 80);
}
</style>