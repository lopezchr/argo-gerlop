---
import { Image } from 'astro:assets';
import signImage from '../assets/img/firma.png';
---
<section class="navbar" role="navigation">
  <div class="container">
    <div class="d-flex align-items-center">
      <div class="ml-3">
        <Image src={signImage} alt="logo firma">
      </div>
      <div>
        <a href="/"><strong>Inicio</strong></a>
        <a href="/gallery"><strong>Galeria</strong></a>
        <a href="/contact">Contacto</a>
      </div>
    </div>
  </div>
</section>

<style>
.navbar {
  position: relative;
  background-color: white;
	border-color: rgba(255,255,255,0.3);
 	box-shadow:0px 0px 10px #727272;
 	padding: 12px 0;
}
a {
  margin-left: 10px;
  text-decoration: none;
  font-size: 20px;
  color: rgb(80, 80, 80);
}

.facebook-icon {
  width: 130px;
  display: block;
}
</style>